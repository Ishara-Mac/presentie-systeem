        <ListView fx:id="woensdagListview" layoutX="486.0" layoutY="163.0" prefHeight="586.0" prefWidth="200.0" visible="false" />
        <ListView fx:id="donderdagListview" layoutX="714.0" layoutY="163.0" prefHeight="586.0" prefWidth="200.0" visible="false" />
        <ListView fx:id="vrijdagListview" layoutX="945.0" layoutY="163.0" prefHeight="586.0" prefWidth="200.0" visible="false" />
      <Button onAction="#logOut" layoutX="18.0" layoutY="18.0" mnemonicParsing="false" text="Logout" />

   </children>
