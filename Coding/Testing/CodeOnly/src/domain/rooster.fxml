        <ListView fx:id="thisDay" layoutX="18.0" layoutY="137.0" prefHeight="602.0" prefWidth="1125.0" />

        <Label fx:id="maandagLabel"   onMouseClicked="#handleAbstentieMaandag" layoutX="32.0" layoutY="118.0" prefHeight="39.0" prefWidth="200.0" text="maandag" textAlignment="CENTER" visible="false" />
        <Label fx:id="dinsdagLabel" onMouseClicked="#handleAbstentieDinsdag" layoutX="258.0" layoutY="118.0" prefHeight="39.0" prefWidth="200.0" text="dinsdag" textAlignment="JUSTIFY" visible="false" />
        <Label fx:id="woensdagLabel" onMouseClicked="#handleAbstentieWoensdag" layoutX="486.0" layoutY="118.0" prefHeight="39.0" prefWidth="200.0" text="woensdag" textAlignment="JUSTIFY" visible="false" />
        <Label fx:id="donderdagLabel" onMouseClicked="#handleAbstentieDonderdag" layoutX="713.0" layoutY="118.0" prefHeight="39.0" prefWidth="200.0" text="donderdag" textAlignment="JUSTIFY" visible="false" />
        <Label fx:id="vrijdagLabel" onMouseClicked="#handleAbstentieVrijdag" layoutX="945.0" layoutY="118.0" prefHeight="39.0" prefWidth="200.0" text="vrijdag" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS" visible="false" />

        <ListView fx:id="maandagListview" layoutX="32.0" layoutY="163.0" prefHeight="586.0" prefWidth="200.0" visible="false" />
